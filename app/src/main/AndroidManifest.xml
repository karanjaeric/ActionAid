<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="threemodernsystems.com.notes">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".BorrowLoan"
            android:label="@string/title_activity_borrow_loan"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".LoanDetails"
            android:label="@string/title_activity_loan_details"
            android:theme="@style/AppTheme" />
        <activity android:name=".RegisterUser" />
        <activity
            android:name=".LoanRepayment"
            android:label="@string/title_activity_loan_repayment"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Dashboard"
            android:label="@string/title_activity_dashboard"
            android:theme="@style/AppTheme"></activity>
    </application>

</manifest>