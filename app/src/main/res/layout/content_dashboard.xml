<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Dashboard"
    tools:showIn="@layout/activity_dashboard">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_marginStart="6dp"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="90sp"
            android:layout_marginRight="10dp"
            android:text="Welcome to SACCOCASH"
            android:textAlignment="center"
            android:textColor="@android:color/holo_orange_dark"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/appUserLBL"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="49dp"
            android:layout_marginRight="49dp"
            android:textStyle="bold"
            android:textSize="30dp"
            android:textColor="@android:color/holo_orange_dark"
            android:text="Erick Karanja Muthike" />

        <TextView
            android:id="@+id/loanLimitTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="4sp"
            android:layout_marginLeft="4sp"
            android:layout_marginTop="150sp"
            android:text="Amount Qualified" />

        <TextView
            android:id="@+id/loanLimit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="150sp"
            android:layout_marginEnd="105dp"
            android:layout_marginRight="105dp"
            android:text="10000" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="4sp"
            android:layout_marginTop="188dp"
            android:text="Amount Borrowed" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/loanLimit"
            android:layout_alignLeft="@+id/loanLimit"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="180sp"
            android:text="0" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="0sp"
            android:layout_marginLeft="0sp"
            android:layout_marginTop="210sp"
            android:text="Amount Repaid" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/loanLimit"
            android:layout_alignTop="@+id/textView10"
            android:text="0"
            android:layout_alignLeft="@+id/loanLimit" />

        <TextView
            android:id="@+id/advisorylbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="0sp"
            android:layout_marginLeft="0sp"
            android:layout_marginTop="240sp"
            android:text="ADVISORY" />

        <TextView
            android:id="@+id/loanadvisory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/advisorylbl"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="96dp"
            android:layout_marginRight="96dp"
            android:textColor="@color/colorAccent"
            android:text="You Have a Pending Loan" />
        />


        <Button
            android:id="@+id/borrowLoan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView3"
            android:layout_alignLeft="@+id/textView3"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="76dp"
            android:background="@color/colorPrimaryDark"
            android:textSize="30dp"
            android:textColor="@android:color/white"
            android:text="BORROW" />

        <Button
            android:id="@+id/repayLoan"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="11dp"
            android:background="@color/colorPrimaryDark"
            android:textSize="30dp"
            android:textColor="@android:color/white"
            android:text="REPAY" />





</RelativeLayout>